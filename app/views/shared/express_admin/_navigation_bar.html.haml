-# navigation styled for Zurb Foundation 5
-# the syntax for data-topbar may need to change for Zurb Foundation 5
%nav.top-bar{"data-topbar" => true, "data-options" => "is_hover:false"}
  = render title_partial

  .top-bar-section
    %ul
      %li.divider
      %li.has-dropdown.megamenu
        %a{href: '#'} Manage
        %ul.dropdown.dropdown-wrapper
          %li.megamenu-overlay
            .megamenu-container
              .row
                = render partial: 'shared/express_admin/express_admin_module_menu'
                / Any module wishing to provide an extra menu may do here.
                = render partial: 'shared/express_admin/express_admin_extra_menu' rescue nil

  %section.top-bar-section
    %ul.left
      %li.divider
      %li
        %a{href: "/"} View Site

    %ul.right
      - if current_user
        %li.gravatar= image_tag("#{gravatar_image_url(current_user.email)}?s=40")
      %li
        - if self.respond_to?(:user_signed_in?)
          - if user_signed_in?
            = link_to 'Sign out', main_app.destroy_user_session_path, method: :delete
          - else
            = link_to 'Sign in', main_app.user_session_path
