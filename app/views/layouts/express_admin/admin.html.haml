!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : Rails.application.class.parent_name.underscore.titleize
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Testapp'}"}
    %meta{:name => "viewport", :content => "width=device-width", "initial-scale" => 1.0}
    = stylesheet_link_tag 'express_admin/application', media: 'all', 'data-turbolinks-track' => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'express_admin/application', 'data-turbolinks-track' => true
    = yield(:page_css)
    = csrf_meta_tags
  %body
    %header#header
      = render 'shared/express_admin/navigation_bar'
    = content_for?(:content) ? yield(:content) : yield
    = javascript_include_tag 'message-bus'
    = yield(:page_javascript)
