- content_for :content do
  %main.main-container{role: "main"}
    = render 'shared/express_admin/messages'
    - if content_for?(:page_header)
      .row.page-header
        %h1
          = yield :page_header
        - if content_for?(:page_header_lead)
          %p.lead
            = yield :page_header_lead
    .row.page-body
      = yield

- content_for :page_css do
  = stylesheet_link_tag 'app_express/application'

= render template: 'layouts/express_admin/admin'
